<!-- PAGES --> 

<section id="navigation">
<h3>Navigation</h3>
<h4>Lorem ipsum dolor sit amet</h4>
<pre><code class="language-javascript">
// Instance a new page class
var navigation = new phonepack.Navigation(document.getElementById('pages'));

// Push a new page into the DOM
navigation.pushPage('example-page.html', doSomething);

// Close the current page pushed in the DOM
navigation.closeCurrentPage();

// Replace a new page in DOM
navigation.changePage('example-page.html', doSomething);


// Push a new page into the DOM
navigation.pushPage('example-page.html', preRenderCallback, doSomething);

// Recive the html template element into the first param (templateElement)
// In second param, recive a function for render a element (render)
function preRenderCallback(templateElement, render){
    // callback call render element
    render();
}

function doSomething(){
    // Callback page
}
</code>
</pre>
</section>

